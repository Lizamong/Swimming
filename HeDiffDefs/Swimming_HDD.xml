<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>LZG_Drowning</defName>
    <label>drowning</label>
    <lethalSeverity>1</lethalSeverity>
    <scenarioCanAdd>true</scenarioCanAdd>
    <stages>
      <li>
        <label>holding breath</label>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>choking</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.40</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>Lost conciousness</label>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.90</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>Death</label>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-190</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
